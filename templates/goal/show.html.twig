{% extends 'base.html.twig' %}

{% block title %}Détail de l'objectif{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détail de l'objectif</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ goal.id }}</td>
            </tr>
            <tr>
                <th>Mois</th>
                <td>{{ goal.month }}</td>
            </tr>
            <tr>
                <th>Limite</th>
                <td>{{ goal.limite }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_goal_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>

        <a href="{{ path('app_goal_edit', {'id': goal.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>

        {{ include('goal/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
