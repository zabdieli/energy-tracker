{% extends 'base.html.twig' %}

{% block title %}Alertes de consommation{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1><i class="bi bi-bell-fill"></i> Alertes de consommation</h1>

    {% if alerts is empty %}
        <p><i class="bi bi-check-circle-fill text-success"></i> Aucune alerte détectée.</p>
    {% else %}
        <ul class="list-group">
            {% for alert in alerts %}
                <li class="list-group-item list-group-item-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i> {{ alert }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
